<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="C-001" author="domenico">
        <createTable tableName="complaints">

            <column name="compl_id" type="SERIAL">
              <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="complaint" type="varchar(255)">
              <constraints nullable="false"/>
            </column>

        </createTable>

    </changeSet>


    <changeSet id="C-002" author="domenico">
        <insert tableName="complaints">
            <column name="complaint" value="Just a first initial complaint" />
        </insert>

        <insert tableName="complaints">
            <column name="complaint" value="And another one initially loaded" />
        </insert>

    </changeSet>

</databaseChangeLog>
